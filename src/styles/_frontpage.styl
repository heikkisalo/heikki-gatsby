.home
	padding-bottom: 100px
	.portfolio-item
		max-width: 100%
		clear: both
		padding: 1.5em 1em
		a
			opacity: 1
			transition: all ease 0.25s
			&:active
				opacity: 0.5
		.imgcontainer
			width: 100%
			float: none
		.title
			width: 100%
			float: none
			margin-top: 0
			font-size: 1.25rem
			line-height: 1.15
			margin: 0.8rem 0 0 0
			a
				text-decoration: none
				color: #ccc
				transition: all 0.25s ease
				&:hover
					color: #212121
				&:active
					color: color-primary
			p
				font-size: 0.75rem
				text-transform: uppercase
				letter-spacing: 1px
	@media(max-width:767px)
		.portfolio-item .title
			padding: 0 1rem
	
	@media(min-width:768px)
		.portfolioarea
			max-width: 1100px
			margin: 0 auto
		.portfolio-item
			padding: 4em 0
			.imgcontainer
				width: 48%
				float: left
				img
					position: relative
					top: 0
					transition: all 0.4s ease
					&:hover
						top: -5px
				
				&:before
					content: ''
					display: block
					background: url('/img/rectangle.svg')
					background-size: 100%
					background-position: top center
					background-repeat: no-repeat
					width: 180px
					height: 50px
					margin: 0 auto
				&:after
					content: ''
					display: block
					background: url('/img/rectangle.svg')
					background-size: 100%
					background-position: bottom center
					background-repeat: no-repeat
					width: 180px
					height: 55px
					margin: -15px auto 0
						
			.title
				width: 48%
				float: right
				margin-top: 11rem
				font-size: 2.5rem
			
			&:nth-child(even) .imgcontainer
				float: right
				&::before
					left: auto
					right: -30px
			&:nth-child(even) .title
				float: left
				text-align: right