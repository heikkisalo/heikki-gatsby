.heikki-image
	background-color: color-dark
	background-image: url('/img/heikki-bg-2.jpg')
	background-size: cover
	background-position: 25% center
	color: white
	position: relative
	height: 66vh
	min-height: 450px
	max-height: 750px
	.info
		position: absolute
		bottom: 1rem
		left: 2rem
		ul
			margin: 0 0 1rem 1rem
			serif()
			li
				padding: 0
				margin: 0
				list-style: none
		@media(min-width: 768px)
			bottom: 2.5rem
			left: 3.5rem
		a
			color: color-primary
			text-decoration: none
	&.heikki2
		background-image: url('/img/heikki-bg-1.jpg')
	&.heikki3
		background-image: url('/img/heikki3.jpg')

.about
	.container.resume-wrapper.half .module-container
		@media(min-width:768px)
			width: 50%
			float: left
			padding: 1rem
			
	ul.somelinks
		text-align: center
		padding: 60px 1em 40px
		margin: 0
		li
			list-style: none
			display: inline-block
			a
				text-decoration: none

.module-container
	h1
		padding: 1rem

.module
	margin: 1em 0
	padding: 1rem
	background: #fff
	position: relative
	top: 0
	transition: all ease 0.2s
	&:hover
		top: -4px
		box-shadow: 0 10px 26px rgba(0,0,0,0.1)
	h1,h2,h3,h4
		margin: .5rem 0
		padding: 0
	a
		text-decoration: none
	.organization
		font-size: 1.1rem
	.position
		font-size: 1.1rem
	.time
		font-size: 0.9rem
	.description
		font-size: 0.8rem
		line-height: 1.6
		margin-top: 0.75rem


#recommendations
	margin-top: 5rem
	padding: 80px 1em 90px
	background: color-primary
	.recommendation
		max-width: 560px
		margin: 0 auto
		padding: 1em
	p
		serif()
		font-size: 1.3em
		line-height: 1.4
	span
		font-size: 0.8rem

#coffee
	margin-top: 8rem
	margin-bottom: 8rem
	text-align: center
	a.btn
		display: inline-block
		padding: 14px 23px
		background: color-primary
		color: color-dark
		margin: 0.5rem
		border-radius: 30px
		text-decoration: none
		