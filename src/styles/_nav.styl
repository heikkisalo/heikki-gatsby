.navbar
	background: #fefefe
	.container
		max-width: 100%
		margin: 0 auto
	h1.branding
		margin: 0
	.branding
		width: 50%
		a
			font-size: 1rem
			display: inline-block
			width: auto
			padding: 15px 20px
			margin: 0
			background: white
			color: color-dark
			border: 3px solid white
			text-transform: uppercase
			text-decoration: none
			font-weight: 800
			sans-serif()
			letter-spacing: 2px
			transition: all ease 0.15s
			&:hover
				background: color-dark
				color: white
	.navigation
		position: absolute
		right: 0
		top: 0
		nav
			ul
				margin: 0
				li
					margin: 0
					list-style: none
					display: inline-block
					a
						font-size: 0.8rem
						color: color-dark
						padding: 15px 8px
						display: inline-block
						text-decoration: none
						height: 56px
						overflow: hidden
						transition: all ease 0.15s
						&::after
							content: ""
							display: block
							background: color-primary
							height: 2px
							position: relative
							top: 18px
							transition: all ease 0.15s
						&:hover::after
							top: 0
						@media(min-width: 768px)
							padding: 15px
						